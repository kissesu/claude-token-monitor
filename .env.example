# Claude Token Monitor 环境配置模板
# 复制此文件为 .env 并修改相应配置

# Claude CLI 配置目录
CLAUDE_DIR=~/.claude

# 数据库文件路径
DATABASE_PATH=data/monitor.db

# 后端服务端口（5位数不常用端口）
BACKEND_PORT=51888

# 前端服务端口（5位数不常用端口）
FRONTEND_PORT=51173

# 日志级别（DEBUG, INFO, WARNING, ERROR, CRITICAL）
LOG_LEVEL=INFO

# 调试模式
DEBUG=false

# API 配置
API_PREFIX=/api/v1

# 数据库配置
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600

# 监控配置
MONITOR_INTERVAL=60
MAX_HISTORY_DAYS=90
