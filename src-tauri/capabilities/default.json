{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Claude Token Monitor 默认权限",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "notification:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$HOME/.claude/**" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$HOME/.claude/**" }
      ]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [
        { "path": "$HOME/.claude/**" }
      ]
    }
  ]
}
